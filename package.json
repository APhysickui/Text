{
  "name": "slidev-theme-apple",
  "version": "1.0.0",
  "description": "Apple-style theme for Slidev presentations",
  "keywords": [
    "slidev",
    "slidev-theme",
    "apple",
    "presentation",
    "theme"
  ],
  "homepage": "https://github.com/yourusername/slidev-theme-apple",
  "bugs": {
    "url": "https://github.com/yourusername/slidev-theme-apple/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/slidev-theme-apple.git"
  },
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "main": "index.ts",
  "files": [
    "components",
    "layouts",
    "styles",
    "index.ts",
    "package.json",
    "README.md"
  ],
  "engines": {
    "node": ">=14.0.0",
    "slidev": ">=0.42.0"
  },
  "peerDependencies": {
    "@slidev/cli": ">=0.42.0",
    "@slidev/types": ">=0.42.0"
  },
  "devDependencies": {
    "@iconify-json/carbon": "^1.1.18",
    "@iconify-json/logos": "^1.1.33",
    "@iconify-json/mdi": "^1.1.54",
    "@slidev/cli": "^0.42.11",
    "@slidev/types": "^0.42.5",
    "prettier": "^3.5.3",
    "prettier-plugin-slidev": "^1.0.5",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "slidev build slides.md",
    "dev": "slidev slides.md --open",
    "export": "slidev export slides.md",
    "screenshot": "slidev export slides.md --format png",
    "dev:cors": "slidev slides.md --open --host 0.0.0.0 --port 3030 --cors"
  },
  "slidev": {
    "colorSchema": "both",
    "highlighter": "shiki",
    "defaults": {
      "fonts": {
        "sans": "Inter, SF Pro Display",
        "mono": "SF Mono"
      }
    }
  }
}
